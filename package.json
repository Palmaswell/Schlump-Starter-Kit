{
  "name": "schlump-starter-kit",
  "version": "0.0.1",
  "description": "Schlump Boilerplate Starter Kit",
  "repository": {
    "url": "",
    "type": "git"
  },
  "scripts": {
    "start": "cross-env OUTDIR=docs yarn serve && yarn build:watch",
    "serve": "browser-sync start --config tasks/browser-sync.js --serveStatic docs --files docs",
    "build:css": "babel-node tasks/css.js --presets es2015,stage-2",
    "build:scss": "node-sass --include-path scss src/scss/app.scss  docs/app.css",
    "build:prefix": "postcss --use autoprefixer -b 'last 3 versions' < docs/app.css | postcss --use cssnano > docs/app.min.css",
    "build:pages": "schlump --dest-statics=./docs/ --dest=./docs --scoped-css=./src/scss/_scoped.css --css-variables",
    "build:watch:css": "chokidar \"src/**/*.scss\" \"src/**/*.css\" --initial --command \"yarn build:css\"",
    "build:watch:pages": "chokidar \"src/pages/**/*\" \"src/templates/**/*.html\" \"src/helpers/**/*\"  --initial --command \"yarn build:pages\"",
    "build:watch": "yarn build:css && (yarn build:watch:pages & yarn build:watch:css)"
  },
  "author": "Mauricio Palma <mauricio.palma@woodlikeocean.com>",
  "license": "MIT",
  "resolutions": {
    "camelcase": "4.0.0",
    "source-map": "0.5.6",
    "core-js": "2.4.1",
    "os-homedir": "1.0.1",
    "minimist": "1.2.0",
    "supports-color": "3.1.2",
    "js-yaml": "3.6.1",
    "lru-cache": "3.2.0",
    "signal-exit": "3.0.2",
    "readable-stream": "2.0.6",
    "assert-plus": "1.0.0",
    "yargs": "4.8.1",
    "async": "1.5.2"
  },
  "dependencies": {
    "chokidar-cli": "^1.2.0",
    "node-sass": "^4.1.1",
    "schlump": "^0.17.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.4",
    "autoprefixer-core": "^6.0.1",
    "babel-cli": "^6.22.2",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "browser-sync": "^2.18.5",
    "cross-env": "^3.1.3",
    "cssnano": "^3.9.1",
    "cssnano-cli": "^1.0.5",
    "node-sass": "^4.5.0",
    "postcss": "^5.2.11",
    "postcss-cli": "^2.6.0",
    "postcss-scss": "^0.4.0"
  }
}
